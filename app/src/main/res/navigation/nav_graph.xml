<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/recipeHomeFragment">

    <fragment
        android:id="@+id/recipeHomeFragment"
        android:name="de.hs_rm.recipe_me.ui.recipe.RecipeHomeFragment"
        android:label="Recipe Home Fragment"
        tools:layout="@layout/recipe_home_fragment">

        <action android:id="@+id/action_recipeHomeFragment_to_profileFragment" />
        <action android:id="@+id/action_recipeHomeFragment_to_shoppingListFragment" />
        <action
            android:id="@+id/action_recipe_home_fragment_to_recipe_category_fragment"
            app:destination="@id/recipeCategoryFragment" />
        <action
            android:id="@+id/action_recipeHomeFragment_to_add_recipe_fragment"
            app:destination="@id/add_recipe_fragment" />
    </fragment>

    <fragment
        android:id="@+id/recipeCategoryFragment"
        android:name="de.hs_rm.recipe_me.ui.recipe.RecipeCategoryFragment"
        android:label="Recipe Category Fragment"
        tools:layout="@layout/recipe_category_fragment">

        <argument
            android:name="recipeCategory"
            app:argType="de.hs_rm.recipe_me.model.recipe.RecipeCategory" />

        <action android:id="@+id/action_recipeCategoryFragment_to_profileFragment" />
        <action android:id="@+id/action_recipeCategoryFragment_to_shoppingListFragment" />
        <action
            android:id="@+id/action_recipeCategoryFragment_to_add_recipe_fragment"
            app:destination="@id/add_recipe_fragment" />
    </fragment>

    <fragment
        android:id="@+id/add_recipe_fragment"
        android:name="de.hs_rm.recipe_me.ui.recipe.AddRecipeFragment"
        android:label="Add Recipe Fragment"
        tools:layout="@layout/add_recipe_fragment" />

    <fragment
        android:id="@+id/shoppingListFragment"
        android:name="de.hs_rm.recipe_me.ui.shopping_list.ShoppingListFragment"
        android:label="Shopping List Fragment"
        tools:layout="@layout/shopping_list_fragment" />

    <fragment
        android:id="@+id/profileFragment"
        android:name="de.hs_rm.recipe_me.ui.profile.ProfileFragment"
        android:label="Profile Fragment"
        tools:layout="@layout/profile_fragment" />

</navigation>