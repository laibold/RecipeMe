<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="headline_1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/raleway_extrabold</item>
        <item name="android:textSize">@dimen/font_size_headline_1</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:layout_marginStart">@dimen/outline_horizontal</item>
        <item name="android:layout_marginTop">@dimen/margin_top</item>
    </style>

    <style name="headline_2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/raleway_extrabold</item>
        <item name="android:textSize">@dimen/font_size_headline_2</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:layout_marginTop">@dimen/margin_top</item>
    </style>

    <style name="headline_3">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/raleway_extrabold</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">@dimen/font_size_headline_3</item>
    </style>

    <style name="headline_image">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/raleway_extrabold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:shadowColor">#3C3131</item>
        <item name="android:shadowRadius">8</item>
    </style>

    <style name="headline_image_1" parent="headline_image">
        <item name="android:textSize">@dimen/font_size_headline_1</item>
    </style>

    <style name="headline_image_2" parent="headline_image">
        <item name="android:textSize">@dimen/font_size_headline_2</item>
    </style>

    <style name="text">
        <item name="android:fontFamily">@font/heebo_regular</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">@dimen/font_size_text</item>
    </style>

    <style name="small_text" parent="text">
        <item name="android:textSize">@dimen/font_size_tertiary</item>
    </style>

    <style name="bold_text" parent="text">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="label" parent="text">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="styled_button">
        <item name="android:fontFamily">@font/heebo_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="cornerRadius">25dp</item>
    </style>

    <style name="primary_button" parent="styled_button">
        <item name="android:layout_height">@dimen/button_height_big</item>
        <item name="android:layout_width">@dimen/button_width_big</item>
        <item name="layout_constraintWidth_percent">@dimen/button_big_width_percentage</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/font_size_text</item>
        <item name="android:backgroundTint">?attr/colorPrimaryVariant</item>
    </style>

    <style name="secondary_button" parent="styled_button">
        <item name="android:layout_height">@dimen/button_height_big</item>
        <item name="android:layout_width">@dimen/button_width_big</item>
        <item name="layout_constraintWidth_percent">@dimen/button_big_width_percentage</item>
        <item name="android:textColor">?attr/colorPrimaryVariant</item>
        <item name="android:textSize">@dimen/font_size_text</item>
        <item name="android:backgroundTint">?attr/colorOnPrimary</item>
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="tertiary_button" parent="styled_button">
        <item name="android:layout_width">@dimen/button_width_small</item>
        <item name="android:layout_height">@dimen/button_height_small</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">@dimen/font_size_tertiary</item>
        <item name="android:backgroundTint">?attr/colorOnPrimary</item>
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">?attr/colorOnSecondary</item>
    </style>

    <style name="small_circle_button">
        <item name="android:layout_width">@dimen/small_circle_button</item>
        <item name="android:layout_height">@dimen/small_circle_button</item>
        <item name="android:background">@drawable/round_button_filled</item>
        <item name="android:tint">@color/white</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="edit_text">
        <item name="android:backgroundTint">?attr/colorAccent</item>
        <item name="android:layout_height">46dp</item>
    </style>

    <style name="spinner" parent="@style/Widget.AppCompat.Spinner.Underlined">
        <item name="android:backgroundTint">?attr/colorAccent</item>
        <item name="android:layout_height">46dp</item>
        <item name="android:paddingEnd">10dp</item>
    </style>

    <style name="custom_floating_action_button">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:backgroundTint">?attr/colorOnPrimary</item>
        <item name="borderWidth">0dp</item>
        <item name="useCompatPadding">true</item>
    </style>

</resources>
