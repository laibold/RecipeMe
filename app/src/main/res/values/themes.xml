<resources xmlns:tools="http://schemas.android.com/tools" tools:ignore="DuplicateDefinition">

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimaryVariant">@color/dark_red</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
    </style>


    <!-- Base application theme. -->
    <style name="AppThemeLight" parent="AppTheme">
        <item name="colorOnPrimary" >@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorAccent">@color/dark_purple</item>
    </style>

    <style name="AppThemeDark" parent="AppTheme">
        <item name="colorOnPrimary">#282828</item>
        <item name="colorPrimaryDark">#1E1E1E</item>
        <!-- Secondary brand color. -->
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorAccent">#FFA457</item>
    </style>

<!--    The launcher theme. It sets the main window background to the launch_screen drawable-->
    <style name="AppThemeLauncher">
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>

</resources>
