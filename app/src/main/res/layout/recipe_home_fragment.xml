<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/recipe_home_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.recipe.RecipeHomeFragment">

        <TextView
            android:id="@+id/recipe_headline"
            style="@style/headline_1"
            android:text="@string/recipes"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ListView
            android:id="@+id/list"
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            tools:listitem="@layout/category_listitem"
            android:divider="@android:color/transparent"
            android:dividerHeight="35dp"
            app:layout_constraintTop_toBottomOf="@id/recipe_headline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
