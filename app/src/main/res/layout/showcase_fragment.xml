<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/colorOnPrimary"
        tools:context=".ui.recipe.RecipeFragment">

        <TextView
            android:id="@+id/headline"
            style="@style/headline_1"
            android:text="Backwaren"
            app:layout_constraintBottom_toTopOf="@id/message"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/message"
            style="@style/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/outline_horizontal"
            android:layout_marginTop="@dimen/space_below_headline_1"
            android:text="200 g Mehl\n2 Eier\n150 ml Milch\n1/2 TL Zimt\n3 EL Honig\n2 EL Kakaopulver\n50 g Schokostreusel\n100 g ZurÃ¼ck"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/headline" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_secondary"
            style="@style/secondary_button"
            android:layout_width="0dp"
            android:layout_marginStart="@dimen/outline_horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:text="@string/back"
            app:layout_constraintEnd_toStartOf="@id/button_primary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/message" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_primary"
            style="@style/primary_button"
            android:layout_width="0dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="@dimen/outline_horizontal"
            android:text="@string/next"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/button_secondary"
            app:layout_constraintTop_toBottomOf="@id/message" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_tertiary"
            style="@style/button_tertiary"
            android:layout_marginStart="@dimen/outline_horizontal"
            android:layout_marginTop="20dp"
            android:text="@string/add"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/button_secondary" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>