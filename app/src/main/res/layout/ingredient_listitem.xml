<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:descendantFocusability="blocksDescendants"
        android:paddingVertical="8dp">

        <CheckBox
            android:id="@+id/item_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginVertical="0dp"
            android:layout_marginEnd="10dp"
            android:button="@drawable/checkbox_selector"
            android:buttonTint="?attr/colorOnSecondary"
            android:clickable="false"
            android:color="?attr/colorOnSecondary"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:checked="true"
            tools:text="â€Ž"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/ingredient_text_view"
            style="@style/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:maxLines="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/item_checkbox"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="200g Kichererbsen aus dem Glas" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>